{
	"name": "synthetic-copilot-provider",
	"publisher": "SyntheticLab",
	"displayName": "Synthetic Provider for GitHub Copilot",
	"description": "Synthetic Provider for Github Copilot",
	"icon": "assets/logo.png",
	"version": "0.11.0",
	"engines": {
		"vscode": "^1.105.0"
	},
	"categories": [
		"AI",
		"Chat"
	],
	"galleryBanner": {
		"color": "#100f11",
		"theme": "dark"
	},
	"homepage": "https://synthetic.new",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/synthetic-lab/synthetic-copilot-provider"
	},
	"contributes": {
		"languageModelChatProviders": [
			{
				"vendor": "synthetic",
				"displayName": "Synthetic",
				"managementCommand": "synthetic.manage"
			}
		],
		"commands": [
			{
				"command": "synthetic.manage",
				"title": "Manage Synthetic Provider"
			},
			{
				"command": "synthetic.configureTemperature",
				"title": "Configure Model Temperature"
			}
		],
		"configuration": {
			"title": "Synthetic Provider",
			"properties": {
				"synthetic.modelTemperatures": {
					"type": "object",
					"default": {},
					"description": "Custom temperature values for each model. Keys are model IDs, values are temperature numbers between 0 and 2.",
					"additionalProperties": {
						"type": "number",
						"minimum": 0,
						"maximum": 2
					}
				}
			}
		}
	},
	"activationEvents": [
		"onLanguageModelChat:synthetic"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"format": "prettier --write .",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && vscode-test",
		"package": "vsce package --out synthetic-copilot-provider.vsix"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22",
		"@types/vscode": "^1.105.0",
		"@vscode/dts": "^0.4.1",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.2.2",
		"eslint": "^9.13.0",
		"prettier": "^3.1.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"dependencies": {
		"openai": "^6.2.0",
		"radash": "^12.1.1",
		"tiktoken": "^1.0.22",
		"vsce": "^2.15.0",
		"zod": "^4.1.12"
	}
}
